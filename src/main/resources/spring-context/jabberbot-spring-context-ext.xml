<?xml version="1.0" encoding="UTF-8"?>
<!--suppress RequiredBeanTypeInspection -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="/jabberbot.properties" ignore-unresolvable="true"/>
    <context:property-placeholder location="/foosball.properties" ignore-unresolvable="true"/>

    <context:component-scan base-package="cz.janys.foosballbot.handlers.**"/>

    <bean id="foosball" class="cz.janys.jabberbot.ConversationConfiguration">
        <property name="delay" value="${conversation.duration.sec}"/>
    </bean>
</beans>